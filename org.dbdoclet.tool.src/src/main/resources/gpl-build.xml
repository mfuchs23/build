<?xml version="1.0" encoding="UTF-8"?>

<project default="shrink">

	<target name="shrink">
		<loadfile srcFile="gpl-header.txt" property="header"/>
		<replaceregexp flags="s" match="^\s*/\*.*^(package)" replace="${header}\1">
			<fileset dir="java">
				<include name="**/*.java"/>
			</fileset>
		</replaceregexp>
		<ant antfile="build.xml" target="build"/>
		<delete>
			<fileset dir="java">
				<present present="srconly" targetdir="classes">
					<mapper type="glob" from="*.java" to="*.class" />
				</present>
			</fileset>
			<fileset dir="java">
				<include name="META_INF/maven/**"/>
				<include name="com/**"/>
				<include name="org/jfree/**"/>
				<include name="org/apache/**"/>
				<include name="**/*.class"/>
			</fileset>
			<fileset dir=".">
				<include name="gpl-*"/>
			</fileset>
		</delete>
		<deleteEmptyFolders dir="java"/>
		<delete dir="classes"/>
		<delete file="${zipfile}"/>
		<zip destfile="${zipfile}" basedir=".." includes="src/**"/>
		<delete dir="."/>
	</target>

	<macrodef name="deleteEmptyFolders">
		<attribute name="dir" />
		<sequential>
			<delete includeemptydirs="true">
				<fileset dir="@{dir}">
					<and>
						<size value="0"/>
						<type type="dir"/>
					</and>
				</fileset>
			</delete>
		</sequential>
	</macrodef>

</project>